<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Application de base -->
    <style name="Theme.IMC" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!--Style pour l'Input Text "Poids"-->
    <style name="widget.IMC.TextInputLayer.Weight" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textInputLayoutBorder</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="hintTextAppearance">@style/TextApparence.IMC.TextInputLayout.HintText</item>
        <item name="suffixText">kilo</item>
        <item name="suffixTextColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!--Style pour l'Input Text "Taille"-->
    <style name="widget.IMC.TextInputLayer.Height" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/textInputLayoutBorder</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="hintTextAppearance">@style/TextApparence.IMC.TextInputLayout.HintText</item>
        <item name="suffixText">m</item>
        <item name="suffixTextColor">@color/black</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <!--Style de couleur par dÃ©faut-->
    <style name="TextApparence.IMC.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Style des boutons -->
    <style name="Widget.IMC.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/textColorPrimary</item>
        <item name="elevation">10dp</item>
    </style>
    <style name="Widget.IMC.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="materialButtonOutlinedStyle">@color/textColorPrimary</item>
    </style>
</resources>